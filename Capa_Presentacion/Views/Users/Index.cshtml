@model IEnumerable<Capa_Enitdad.Users>

@{
    ViewBag.Title = "Index";
}

<h3>Edit Profile</h3><br /><br />

<table class="table">
    <tr>
        <th>
            Email
        </th>
        <th>
           Password
        </th>
        @if (User.Identity.IsAuthenticated) { 
               <th>Action</th>
        }
        
    </tr>

@foreach (var item in Model.Where(x => x.email == HttpContext.Current.User.Identity.Name)) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item._password)
        </td>
        @{ if (User.Identity.IsAuthenticated)
            {
                <td>

                    @Html.ActionLink("Edit", "Edit", new { id = item.id })

                </td>
            }

        }

    </tr>
}

</table>
